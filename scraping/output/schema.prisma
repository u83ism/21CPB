generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // または "mysql"
  url      = env("DATABASE_URL")
}

model Promotion {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  prowrestlers Prowrestler[]

  @@map("promotions")
}

model Prowrestler {
  id            Int       @id @default(autoincrement())
  name          String
  dateOfBirth   DateTime
  mainPromotion Promotion @relation(fields: [promotionId], references: [id])
  promotionId   Int
  isJapanese    Boolean

  @@map("prowrestlers")
}
